programa {
  funcao inicio() {
      real numero

        escreva("Digite um número: ")
        leia(numero)

        se(numero > 0 )
         escreva("O número é positivo! ")
      senao 
      se(numero < 0 )
      escreva("O numero é negativo! ")

      se(numero == 0)
      escreva("O número é zero! ")
  


      


  }
}
